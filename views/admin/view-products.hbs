<section>

    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="container mt-5 pl-5">
                <h3 class='text-center'>All Product Details</h3>
                <a href="/admin/add-products" class="btn btn-success float-right" style="width: 200px">Add product</a>

                <div class='pt-5'>
                    <table class="table" id="prodsTable">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Product ID</th>
                                <th scope="col">Category</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                                <th>Image</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this._id}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.description}}</td>
                                <td>{{this.price}}</td>
                                <td><img style='width: 50px; height: 50px' src='/product-images/{{this._id}}.jpg'></td>
                                <td>
                                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                                    <a href="/admin/delete-product/?id={{this._id}}&name={{this.name}}&place=Delhi"
                                        class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to delete {{this.name}}?')">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#prodsTable').DataTable()
    })
</script>