<section>

    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="container pt-5 ml-5"></div>
            <h3 class='text-center'>All Users details</h3>

            <table class="table" id="usersTable">
                <thead>
                    <tr>
                        <th scope="col">User name</th>
                        <th scope="col">User ID</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Pincode</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Options</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this._id}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.address.address}}</td>
                        <td>{{this.address.city}}</td>
                        <td>{{this.address.state}}</td>
                        <td>{{this.address.pincode}}</td>
                        <td>{{this.address.mobile}}</td>
                        <td>
                            <a href="/delete-user/{{this._id}}" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this user?')">Delete user</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    </div>
</section>

<script>
    $(function () {
        $('#usersTable').DataTable()
    })
</script>